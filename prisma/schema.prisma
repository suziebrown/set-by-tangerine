generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["strictUndefinedChecks"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

model Puzzle {
    id               Int        @id @default(autoincrement())
    title            String
    setBy            String
    blurb            String?
    publishedAt      DateTime
    firstPublishedAt DateTime?
    downloadUrl      String?
    imageUrl         String?
    tags             Tag[]
    crossword        Crossword?

    @@index([title])
}

model Tag {
    id      Int      @id @default(autoincrement())
    label   String   @unique
    puzzles Puzzle[]

    @@index([label])
}

model Crossword {
    id           Int     @id @default(autoincrement())
    puzzleId     Int     @unique
    puzzle       Puzzle  @relation(fields: [puzzleId], references: [id])
    instructions String?
    clues        Clue[]
}

model Clue {
    id          Int       @id @default(autoincrement())
    crosswordId Int
    crossword   Crossword @relation(fields: [crosswordId], references: [id])
    direction   String
    numberLabel String
    clue        String
    lengthLabel String
}
